{% extends 'base.html.twig' %}

{% block title %}Exo final - Ajout utilisateur
{% endblock %}

{% block body %}

	<div class="container">
		<h1 class="mb-4 d-flex justify-content-center">Ajout d'une possession</h1>

		{{ form_start(form) }}

		<div class="form-group">
			{{ form_label(form.nom) }}
			{{ form_widget(form.nom) }}
			<div class="form-error">
				{{ form_errors(form.nom) }}
			</div>
			<div class="form-group">
				{{ form_label(form.valeur) }}
				{{ form_widget(form.valeur) }}
				<div class="form-error">
					{{ form_errors(form.valeur) }}
				</div>
			</div>
			<div class="form-group">
				{{ form_label(form.type) }}
				{{ form_widget(form.type) }}
				<div class="form-error">
					{{ form_errors(form.type) }}
				</div>
			</div>
		</div>
		<div class="form-group">
			{{ form_row(form.submit) }}
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
